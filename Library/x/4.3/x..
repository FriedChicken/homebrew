#!/bin/sh

HOMEBREW_PREFIX=$(dirname $(dirname $(dirname $(cd $(dirname $0) && pwd))))
[ -x /usr/bin/cc ] || NCLT="1"

if [ -d "/usr/X11/include" ]; then
  X11_PREFIX="/usr/X11"
elif [ -d "/opt/X11/include" ]; then
  X11_PREFIX="/opt/X11"
fi

if [ $NCLT ]; then
  macosv="$MACOS_DEPLOYMENT_TARGET"
  [ $macosv ] || macosv=$(/usr/bin/sw_vers -productVersion)

  [ $DEVELOPER_DIR ] || DEVELOPER_DIR=$("xcode-select" -print-path)
  [ $DEVELOPER_DIR ] || DEVELOPER_DIR="/Applications/Xcode.app/Contents/Developer"
  SDKROOT="$DEVELOPER_DIR/Platforms/MacOSX.platform/Developer/SDKs/MacOSX$macosv.sdk"
  [ -d "$SDKROOT/usr/X11/include" ] && X11_PREFIX="$SDKROOT/usr/X11"
fi
